<div class="modal-container">
    @foreach (var member in Group)
    {
        <RadzenRow JustifyContent=JustifyContent.Start AlignItems=AlignItems.Center class="fiap-card">
            <div class="fiap-card-header">
                @if (!string.IsNullOrEmpty(member.ProfilePicture))
                {
                    <img src="@member.ProfilePicture" alt="@member.Name" />
                }
                else
                {
                    <RadzenIcon Icon="person" />
                }
            </div>

            <div class="fiap-card-body">
                <RadzenText Text="@member.Name" TextStyle="TextStyle.H5" />
                <RadzenText Text="@member.Email" TextStyle="TextStyle.Body1" />

                <RadzenRow JustifyContent="JustifyContent.Start" Gap="16">                    
                    <RadzenLink Path="@member.LinkedinPath" Image="./images/LinkedIn_icon_circle.png" Target="_blank" />
                </RadzenRow>
            </div>
        </RadzenRow>

    }
</div>

